{
  "manifest_version": 1,
  "type": "WebApp",
  "meta": {
    "name": "LoL Companion App",
    "version": "0.1",
    "minimum-overwolf-version": "0.120.1.0",
    "author": "Comp 490",
    "icon": "IconMouseOver.png",
    "icon_gray": "IconMouseNormal.png",
    "launcher_icon": "desktop-icon.ico",
    "window_icon": "TaskbarIcon.png",
    "description": "Companion Application for League of Legends"
  },
  "permissions": [
    "Hotkeys",
    "Extensions",
    "Streaming",
    "Profile",
    "GameInfo",
    "DesktopStreaming",
    "FileSystem",
    "VideoCaptureSettings"
  ],
  "data": {
    "game_targeting": {
      "type": "dedicated",
      "game_ids": [10902, 5426]
    },
    "launch_events": [
      {
        "event": "GameLaunch",
        "event_data": {
          "game_ids": [10902, 5426]
        },
        "start_minimized": false
      }
    ],
    "hotkeys": {
      "sample_app_showhide": {
        "title": "Show/Hide In-Game Window",
        "action-type": "custom",
        "default": "Ctrl+F"
      }
    },
    "game_events": [10902, 5426],
    "start_window": "background",
    "windows": {
      "background": {
        "file": "windows/background/index.html",
        "background_optimization": false,
        "is_background_page": true
      },
      "desktop": {
        "file": "windows/desktop/index.html",
        "native_window": true,
        "transparent": true,
        "resizable": false,
        "size": {
          "width": 500,
          "height": 600
        },
        "desktop_only": true

      },
      "in_game": {
        "file": "windows/in-game/index.html",
        "in_game_only": true,
        "focus_game_takeover": "ReleaseOnHidden",
        "focus_game_takeover_release_hotkey": "sample_app_showhide",
        "transparent": true,
        "resizable": true,
        "size": {
          "width": 1450,
          "height": 800
        }
  
      }
    },
    "protocol_override_domains": { "googlesyndication": "http" },
    "block_top_window_navigation": true,
    "popup_blocker": true,
    "mute": true,
    "externally_connectable": {
      "matches": [
        "http://*.overwolf.com",
        "https://*.overwolf.com",
        "https://overwolf.github.io",
        "https://*.google-analytics.com",
        "http://*.google-analytics.com",
        "https://www.googleapis.com",
        "https://discord.gg/v5cfBTq",
        "https://twitter.com/",
        "https://www.facebook.com",
        "https://www.reddit.com",
        "http://ddragon.leagueoflegends.com",
        "https://na1.api.riotgames.com"
      ]
    },
    "force_browser": "user",
    "developer": {
      "enable_auto_refresh": true,
      "reload_delay": 1000,
      "filter": "*.*"
    }
  }
}
